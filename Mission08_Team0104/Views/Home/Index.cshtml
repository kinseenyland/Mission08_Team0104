@{
    ViewData["Title"] = "Home Page";
}

@model List<Mission08_Team0104.Models.Task>
<style>
    .table-container {
        max-height: 400px; 
        overflow-y: auto; 
    }
</style>

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <h4>Quadrant I: Important / Urgent</h4>
            <div class="table-container">
                <table class="table table-bordered">
                    <thead class="fw-bold">
                        <tr>
                            <td>Task</td>
                            <td>DueDate</td>
                            <td>Category</td>
                            <td>Edit</td>
                            <td>Delete</td>
                        </tr>
                    </thead>

                    @foreach (var x in Model.Where(t => t.Quadrant == 1 && (!t.IsCompleted.HasValue || !t.IsCompleted.Value)))
                    {
                        <tbody>
                            <tr>
                                <td>@x.TaskItem</td>
                                <td>@x.DueDate</td>
                                <td>@x.Category?.CategoryName</td>
                                <td><a class="btn btn-info" asp-controller="Home" asp-action="Edit" asp-route-id="@x.TaskId">Edit</a></td>
                                <td><a class="btn btn-danger" asp-controller="Home" asp-action="Delete" asp-route-id="@x.TaskId">Delete</a></td>
                            </tr>
                        </tbody>
                    }
                </table>
            </div>
        </div>
        <div class="col-md-6">
