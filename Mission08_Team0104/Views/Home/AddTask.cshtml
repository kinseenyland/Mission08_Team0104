<div class="text-center">
    <h1>Add a New Task</h1>
    <p>Enter the task details below</p>
    <hr />

    <form method="post">
        <input type="hidden" asp-for="TaskId" />
        <label asp-for="Task">Task</label>
        <input asp-for="Task" type="text" class="form-control" required />

        <label asp-for="DueDate">Due Date</label>
        <input asp-for="DueDate" type="date" class="form-control" />

        <label asp-for=Quadrant>Quadrant</label>
        <select asp-for="Quadrant" class="form-control" required>
            <option value="">Select Quadrant</option>
            <option value="1">1</option>
            <option value="2">2</option>
            <option value="3">3</option>
            <option value="4">4</option>
        </select>

        <label>Category</label>
        <select asp-for="CategoryId" class="form-control">
            <option value="">Select Category</option>
            <option value="Home">Home</option>
            <option value="Work">Work</option>
            <option value="School">School</option>
            <option value="Church">Church</option>
        </select>

        <button type="submit" class="btn btn-primary">Save</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
        <div asp-validation-summary="All" class="text-danger"></div>
    </form>
</div>